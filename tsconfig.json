{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/lib/todoApi.jsx", "src/hooks/useTodo.jsx", "src/components/todoList.jsx", "src/components/todoDetail.jsx", "src/components/ErrorBoundary.jsx", "src/components/layouts/layout.jsx", "src/components/layouts/navBar.jsx", "src/app/layout.jsx", "src/app/page.jsx", "src/app/todos/page.jsx", "src/app/todos/[id]/page.jsx", "src/components/layouts/footer.jsx"],
  "exclude": ["node_modules"]
}
